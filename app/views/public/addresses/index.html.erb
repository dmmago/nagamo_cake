<header class="py-5">
  <div class="container px-lg-5">
    <div class="row">
      <div class="col">
        <h3 class="fs-4 fw-bold"><span class="bg-light">配送先/登録</span></h3>
        <%= form_with model: @address, url: addresses_path do |f| %>
        <table class="table table-borderless">
          <tr>
            <th>郵便番号(ハイフンなし)</th>
            <td><%= f.text_field :postal_code, autofocus: true %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address, autofocus: true %></td>
          </tr>
          <tr>
            <th>宛名</th>
            <td><%= f.text_field :name, autofocus: true %></td>
            <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
          </tr>
        </table>
        <% end %>
        </div>
    </div>
  </div>
</header>



<div class="container px-lg-5">
      <div class="row">
        <div class="col">
        <table class="table table-bordered border-dark">
          <thead>
            <tr>
              <td class="table-secondary">郵便番号</td>
              <td class="table-secondary">住所</td>
              <td class="table-secondary">宛名</td>
              <td class="table-secondary"></td>
            </tr>
          </thead>

            <tbody>
              <% @addresses.each do |address| %>
              <tr>
                <td><%= address.postal_code %></td>
                <td><%= address.address %></td>
                <td><%= address.name %></td>
                <td><%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %> <%= link_to "削除する", address_path(address), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
  </div>
</section>





