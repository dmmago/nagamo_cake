<h1>配送先/登録</h1>
<%= form_with model: @address, url: addresses_path do |f| %>
<table>
  <tr>
    <th>郵便番号(ハイフンなし)</th>
    <td><%= f.text_field :postal_code, autofocus: true %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= f.text_field :address, autofocus: true %></td>
  </tr>
  <tr>
    <th>宛名</th>
    <td><%= f.text_field :name, autofocus: true %></td>
  </tr>
</table>
<%= f.submit "新規登録" %>

<% end %>

<% @addresses.each do |address| %>
<table>
  <thead>
    <tr>
      <td>郵便番号</td>
      <td>住所</td>
      <td>宛名</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(address) %> <%= link_to "削除", address_path(address), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
  </tbody>
</table>




<% end %>
