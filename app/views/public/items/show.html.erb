<header class="py-5">
  <div class="container px-lg-5">
    <div class="row">
      <div class="col">
      <h3 class="fs-4 fw-bold"><span class="bg-light">商品詳細</span></h3>
 　  　</div>
    </div>
  </div>
</header>


<section class="pt-4">
    <div class="container px-lg-5">
      <div class="row">
        <div class="d-flex">
        <div class="col-4">
        <%= image_tag @item.get_image(300,300) %>
        </div>
        <div class="col-md-6 offset-md-4">
        <table class="table table-sm table-borderless">
          <tbody>

        <tr>
          <td><h3><%= @item.name %></h3></td>
        </tr>
        <tr>
          <td><h5><%= @item.introduction %></h5></td>
        </tr>
        <tr>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>
            <div class="d-flex"><h3>￥<%= @item.with_tax_price %></h3>(税込)</span></div>
          </td>
        </tr>
        <tr>
          <td>
            <%= form_with model: @cart_item, url: cart_items_path do |f| %>
            <%= f.hidden_field :item_id, :value => @item.id %>

            <%= f.select :amount, *[1..10] %>
            <%= f.submit "カートに入れる", class: "btn btn-success" %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
</div>
</div>
</section>