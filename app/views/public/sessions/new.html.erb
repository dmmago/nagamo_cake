<header class="py-5">
  <div class="container px-lg-5">
    <div class="row">
      <div class="col">
        <h3 class="fs-4 fw-bold"><span class="bg-light">ログイン</span></h3>
      </div>
    </div>
  </div>
</header>
<section class="pt-4">
    <div class="container px-lg-5">
      <div class="row">
        <div class="col-8">
        <h7 class="fs-4 fw-bold"><span class="bg-light">会員の方はこちらからログイン</span></h7> 
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="table table-borderless">
          <tr>
          <div class="field">
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </div>
          </tr>
          <tr>
          <div class="field">
            <td><%= f.label :password, "パスワード" %></td>
            <td><%= f.password_field :password, autocomplete: "current-password" %></td>
          </div>
          </tr>
          <tr>
            <td></td>
          <div class="actions">
            <td><%= f.submit "ログイン", class: "btn btn-primary" %></td>
          </div>
          </tr>
      </table>
      <% end %>
      </div>
    </div>
  </div>
</section>
<section class="pt-4">
    <div class="container px-lg-5">
      <div class="row">
        <div class="col-8">
          <h7 class="fs-4 fw-bold"><span class="bg-light">会員登録がお済みでない方</span></h7> <br>

          <%= render "public/shared/links" %>から新規登録を行ってください。
        </div>
      </div>
    </div>
  </section>