<header class="py-5">
  <div class="container px-lg-5">
    <div class="row">
      <div class="col">
        <h3 class="fs-4 fw-bold"><span class="bg-light">新規会員登録</span></h3>        
      </div>
    </div>
  </div>
</header>


            
<section class="pt-4">
    <div class="container px-lg-5">
      <div class="row">
        <div class="col">
        <%= form_with model: @customer, url: customer_registration_path do |f| %>
              <%= render "public/shared/error_messages", resource: resource %>
            <table class="table table-borderless">
              <tbody>
                <tr>
                  <div class="field">
                    <th>名前</th>
                    <td>
                      <%= f.label :"(姓)" %>
                      <%= f.text_field :last_name, autofocus: true %>
                    </td>
                    <td>
                      <%= f.label :"(名) " %>
                      <%= f.text_field :first_name, autofocus: true %>
                    </td>
                  </div>
                </tr>
                  <div class="field">
                    <tr>
                      <th>フリガナ</th>
                      <td>
                        <%= f.label :"(セイ)" %>
                        <%= f.text_field :last_name_kana, autofocus: true %>
                      </td>
                      <td>
                        <%= f.label :"(メイ)" %>
                        <%= f.text_field :first_name_kana, autofocus: true %>
                      </td>
                    </tr>
                  </div>
                  <div class="field">
                    <tr>
                      <th>メールアドレス</th>
                      <td>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                      </td>
                    </tr>
                  </div>
                  <div class="field">
                    <tr>
                      <th>郵便番号(ハイフンなし)</th>
                      <td>
                        <%= f.text_field :postal_code, autofocus: true %>
                      </td>
                    </tr>
                  </div>
                  <div class="field">
                    <tr>
                      <th>住所</th>
                      <td>
                        <%= f.text_field :address, autofocus: true %>
                      </td>
                    </tr>
                  </div>
                  <div class="field">
                    <tr>
                      <th>電話番号</th>
                      <td>
                        <%= f.text_field :telephone_number, autofocus: true %>
                      </td>
                    </tr>
                  </div>
                  <div class="field">
                    <tr>
                      <th>パスワード(6文字以上)</th>
                      <td>
                        
                        <%= f.password_field :password, autocomplete: "new-password" %>
                      </td>
                    </tr>
                  </div>
                  
                  <div class="field">
                    <tr>
                      <th>パスワード(確認用)</th>
                        <td>
                          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                        </td>
                    </tr>
                  </div>
                  
                    <div class="actions">
                      <tr>
                        <th></th>
                        <td>
                        <%= f.submit "新規登録", class: "btn btn-success" %>
                        </td>
                      </tr>
                    </div>
              </tbody>
            </table>
          <h3 class="fs-4 fw-bold"><span class="bg-light">既に登録済の方</span></h3>
          
          <%= render "public/shared/links" %><span>からログインしてください</span>
      </div>
    </div>
  </div>
</section>
<% end %>

