<header class="py-5">
  <div class="container px-lg-5">
    <div class="row">
      <div class="col">
        <h3 class="fs-4 fw-bold"><span class="bg-light">ショッピングカート</span></h3>
        <div class="d-flex justify-content-end">
          <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, "data-confirm" => "本当に削除しますか?", class: "btn btn-danger" %>
        </div>
     </div>
    </div>
  </div>
</header>




<section class="pt-4">
    <div class="container px-lg-5">
      <div class="row">
        <div class="col">
          <table class="table table-bordered border-dark">
          <thead>
            <tr class="table-secondary">
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
              <th></th>
            </tr>
          </thead>
          <% @cart_items.each do |cart_item| %>
          <tbody>
            <tr>
              <td><%= image_tag cart_item.item.get_image(100,100) %> <%= cart_item.item.name %></td>
              <td><%= cart_item.item.with_tax_price %></td>
              <td>
                <%= form_with model: cart_item, local: true do |f| %>
                <%= f.select :amount, *[1..10] %>
                <%= f.submit "変更", class: "btn btn-success" %>
                <% end %>
              </td>
              <td><%= cart_item.subtotal %></td>
              <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, "data-confirm" => "本当に削除しますか?", class: "btn btn-danger " %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</section>
<section2 class="pt-4">
    <div class="container px-lg-5">
      <div class="row">
        <div class="col">
          <%= link_to "買い物を続ける", "/", class: "btn btn-primary"  %>
          <div class="d-flex justify-content-end">
        <div class="col-2">
          <table class="table table-sm table-bordered border-dark">
            <tr>
              <td class="table-secondary">合計金額</td>
              <td style="width: 5%"><%= @total_price %></td>
            </tr>
          </table>
        </div>
          </div>
        <div class="d-flex justify-content-center">
        <% if @cart_items.any? %>
        <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</section2>
