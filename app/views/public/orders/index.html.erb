<h1>注文履歴一覧</h1>
<table>
  <thead>
    <tr>
      <th>注文日</th>
    </tr>
    <tr>
      <h>配送先</h>
    </tr>
    <tr>
      <th>注文商品</th>
    </tr>
    <tr>
      <th>支払金額</th>
    </tr>
    <tr>
      <th>ステータス</th>
    </tr>
    <tr>
      <th>注文詳細</th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <td><%= order.created_at %></td>
    </tr>
    <tr>
      <td><%= order.postal_code %><%= order.address %><br>
          <%= order.name %>
      </td>
    </tr>
    <tr>
      <td>
        <% order.order_details.each do |order_detail| %>
        <%= order_detail.item.name %>
        <% end %>
        </td>
    </tr>
    <tr>
      <td><%= order.total_payment %></td>
    </tr>
    <tr>
      <td><%= order.status %></td>
    </tr>
    <tr>
      <td><%= link_to "表示する", order_path(order) %></td>
    </tr>

  </tbody>
  <% end %>
</table>
