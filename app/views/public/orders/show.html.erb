<header class="py-5">
  <div class="container px-lg-5">
    <div class="row">
      <div class="col">
        <h3 class="fs-4 fw-bold"><span class="bg-light">注文履歴詳細</span></h3>
      </div>
    </div>
      <div class="row">
        <div class="col">
        <h4>注文情報</h4>
        <table class="table table-bordered border-dark">
          <tr>
            <th class="table-secondary">注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th class="table-secondary">配送先</th>
            <td>
              〒<%= @order.postal_code %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th class="table-secondary">支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th class="table-secondary">ステータス</th>
            <td><%= @order.status_i18n %></td>
          </tr>
        </table>
      </div>
      <div class="col">
        <h4>請求情報</h4>
        <table class="table table-bordered border-dark">
          <tr>
            <th class="table-secondary">商品合計</th>
            <td><%= @order.total_payment - @order.shipping_cost %></td>
          </tr>
          <tr>
            <th class="table-secondary">配送料</th>
            <td><%= @order.shipping_cost %></td>
          </tr>
          <tr>
            <th class="table-secondary">ご請求額</th>
            <td><%= @order.total_payment %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</header>
<section class="pt-4">
    <div class="container px-lg-5">
      <div class="row">
        <div class="col-8">
          <h4>注文内容</h4>
          <table class="table table-bordered border-dark">
            <thead class="table-secondary">
              <tr>
              <td>商品</td>
              <td>単価(税込)</td>
              <td>個数</td>
              <td>小計</td>
            </thead>
            <tbody>
             <% @order.order_details.each do |order_detail| %>
              <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.item.with_tax_price %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.order_subtotal %></td>
              </tr>
            <% end %>
            </tbody>


