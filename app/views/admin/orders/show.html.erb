<h1>注文履歴詳細</h1>
<table>
  <tr>
    <th>購入者</th>
    <td><%= @order.customer.last_name %><%= @order.customer.first_name %></td>
  </tr>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>
      〒<%= @order.postal_code %>
      <%= @order.address %>
      <%= @order.name %>
    </td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= @order.payment_method_i18n %></td>
  </tr>
  <tr>
    <th>
      <%= form_with model: @order, url: admin_order_path(@order), method: :patch do |f| %>
      <%= f.select :status, [['入金待ち',"waiting_for_payment"],['入金確認',"payment_confirmation"], ['製作中',"production"], ['発送準備中',"shipping_preparation"],['発送済み',"shipped"]] %>
      <%= f.submit "更新" %>
      <% end %>
    </th>
  </tr>
</table>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
      <th></th>
    </tr>
  </thead>
  <% @order_details.each do |order_detail| %>
  <tbody>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.item.with_tax_price %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.order_subtotal %></td>
      <td>
        <%= form_with model: @order_detail, url: admin_order_detail_path, method: :patch do |f| %>
        <%= f.select :making_status, [['製作不可',"cannot_be_manufactured"],['製作待ち',"waiting_for_production"], ['製作中',"production"], ['製作完了',"completion_of_production"]] %>
        <%= f.submit "更新" %>
        <% end %>
      </td>
      <td></td>

    </tr>
  </tbody>
  <% end %>
</table>




