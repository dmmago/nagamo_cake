<header class="py-5">
  <div class="container px-lg-5">
    <div class="row">
      <div class="col-7">
        <h3 class="fs-4 fw-bold"><span class="bg-light">ジャンル一覧・追加</span></h3>
          <table class="table table-sm table-borderless">
            <tr>
            <%= form_with model: @genre, url: admin_genres_path do |f| %>
            <td><%= f.label :name, "ジャンル名" %></td>
            <td><%= f.text_field :name, autofocus: true %></td>
            <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
          <% end %>
            </tr>
          </table>
        </div>
    </div>
  </div>
</header>
<section class="pt-4">
    <div class="container px-lg-5">
      <div class="row">
        <div class="col-5">
          <table class="table">
              <thead>
                <tr class="bg-light">
                  <th>
                  ジャンル
                  </th>
                  <td></td>
                </tr>
              </thead>
              <tbody>
              <% @genres.each do |genre| %>
                <tr>
                  <td>
                    <%= genre.name %>
                  </td>
                  <td>
                   <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
                  </td>
              </tbody>
              <% end %>
            </table>
