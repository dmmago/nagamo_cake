<header class="py-5">
  <div class="container px-lg-5">
    <div class="row">
      <div class="col">
        <h3 class="fs-4 fw-bold"><span class="bg-light">注文履歴</h3>
      </div>
    </div>
  </div>
</header>
<section class="pt-4">
  <div class="container px-lg-5">
    <div class="row">
      <div class="col">
        <table class="table table-borderless">
            <thead>
                <tr class="bg-light">
                    <th>購入日時</th>
                    <th>購入者</th>
                    <th>注文個数</th>
                    <th>注文ステータス</th>
                </tr>
            </thead>
            <% @orders.each do |order| %>
            <tbody>
                <tr>
                    <td>
                        <%= link_to admin_order_path(order) do %>
                        <span class="text-dark border-bottom border-dark"><%= order.created_at.strftime('%Y/%m/%d %X') %></span>
                        <% end %>
                    </td>
                    <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
                    <td>
                        <%= order.order_details.sum(:amount) %>
        
                    </td>
                    <td><%= order.status_i18n %></td>
                </tr>
            </tbody>
            <% end %>
        </table>
    　</div>
    </div>
    <ul class="pagination justify-content-center">
    <%= paginate @orders %>
    </ul>
  </div>
</section>

