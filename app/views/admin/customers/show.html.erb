<header class="py-5">
  <div class="container px-lg-5">
    <div class="row">
      <div class="col">
        <h3 class="fs-4 fw-bold"><span class="bg-light">      
        <%= @customer.last_name %> <%= @customer.first_name %>さんの会員詳細
        </span></h3>
      　</div>
    </div>
  </div>
</header>
<section class="pt-4">
    <div class="container px-lg-5">
      <div class="row">
        <div class="col-8">
          <table class="table table-sm table-borderless">
            <tr>
              <td>
                会員ID
              </td>
              <td><%= @customer.id %></td>
            </tr>
            <tr>
              <td>氏名</td>
              <td><%= @customer.last_name %> <%= @customer.first_name %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= @customer.telephone_number %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= @customer.email %></td>
            </tr>
            <tr>
              <td>会員ステータス</td>
              <td>
                <% if @customer.is_deleted? == true %>
                <p class="text-muted">退会</p>
                <% else %>
                <p class="text-success">有効</p>
                <% end %>
              </td>
            </tr>
            <tr>
              <td></td>
              <td>
                <%= link_to "編集する" , edit_admin_customer_path, class: "btn btn-success" %>
                <%= link_to "会員一覧", admin_customers_path, class: "btn btn-primary" %>
              </td>
            </tr>
          </table>
         