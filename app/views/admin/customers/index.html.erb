<header class="py-5">
  <div class="container px-lg-5">
    <div class="row">
      <div class="col">
        <h3 class="fs-4 fw-bold"><span class="bg-light">会員一覧</span></h3>        
      </div>
    </div>
  </div>
</header>
<section class="pt-4">
    <div class="container px-lg-5">
      <div class="row">
        <div class="col">
        <table class="table table-borderless">
          <thead>
            <tr class="bg-light">
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <span class="text-dark border-bottom border-dark">
                <%= link_to admin_customer_path(customer), class:"text-dark" do%>
                <%= customer.last_name %> <%= customer.first_name %>
                <% end %>
                </span.
              </td>
              <td><%= customer.email %></td>
              <td>
              <% if customer.is_deleted? == true %>
                <p class="text-muted">退会</p>
                <% else %>
                <p class="text-success">有効</p>
                <% end %>
              </td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
      <ul class="pagination justify-content-center">
      <%= paginate @customers %>
    </ul>
    </div>
</section>

