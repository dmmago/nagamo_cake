<h1>会員一覧</h1>
<table>
  <thead>
    <tr>
      <th>会員ID</th>
    </tr>
    <tr>
      <th>氏名</th>
    </tr>
    <tr>
      <th>メールアドレス</th>
    </tr>
    <tr>
      <th>ステータス</th>
    </tr>
  </thead>
  <% @customers.each do |customer| %>
  <tbody>
    <tr>
      <td><%= customer.id %></td>
    </tr>
    <tr>
      <td>
        <%= link_to admin_customer_path(customer) do%>
        <%= customer.last_name %> <%= customer.first_name %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td><%= customer.email %></td>
    </tr>
    <tr>
      <td><%= customer.is_deleted %></td>
    </tr>
  </tbody>
  <% end %>
</table>
