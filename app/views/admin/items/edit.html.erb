<header class="py-5">
  <div class="container px-lg-5">
    <div class="row">
      <div class="col">
        <h3 class="fs-4 fw-bold"><span class="bg-light">商品編集</span></h3>
        
      </div>
    </div>
  </div>
</header>
<section class="pt-4">
    <div class="container px-lg-5">
      <div class="row">
        <div class="col">
          <%= form_with model: @item, url: admin_item_path(@item.id) do |f| %>
        <table class="table table-sm table-borderless">
          <tbody>
            <tr>
              <th>商品画像</th>
              <td>
                <div class="form-group">
                  <%= f.file_field :image, accept: "image/*" %>
                </div>
              </td>
              </tr>
              <tr>
                <th>商品名</th>
                <td>
                  <div class="form-group">
                  <%= f.text_field :name, autofocus: true %>
                  </div>
                </td>
              </tr>
              <tr>
                <th>商品説明</th>
                <td>
                   <div class="form-group">
                  <%= f.text_area :introduction, autofocus: true %>
                  </div>
                </td>
              </tr>
              <tr>
                <th>ジャンル</th>
                <td>
                  <div class="form-group">
                  <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "選択してください") %>
                  </div>
                </td>
              </tr>
              <tr>
                <th>税抜価格</th>
                <td>
                   <div class="form-group">
                  <%= f.text_field :price, autofocus: true %>
                  </div>
                </td>
              </tr>
              <tr>
                <th>販売ステータス</th>
                <td>
                  <div class="form-group">
                  <%= f.radio_button :is_active, true %>
                  <%= f.label :"販売中" %>
        
                  <%= f.radio_button :is_active, false %>
                  <%= f.label :"販売停止中" %>
                  </div>
                </td>
              </tr>
            <div class="actions">
              <tr>
                <th></th>
                <td>
                  <%= f.submit "変更を保存", class: "btn btn-success" %>
                  <% end %>
                </td>
              </tr>
            </div>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
        
