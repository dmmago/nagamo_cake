<header class="py-5">
  <div class="container px-lg-5">
    <div class="row">
      <div class="col">
        <h3 class="fs-4 fw-bold"><span class="bg-light">商品一覧</span></h3>
      </div>
       <div class="pull-right">
          <%= link_to new_admin_item_path do %>
            <i class="far fa-plus-square"></i>
          <% end %>
        </div>
      </div>
  </div>
</header>
  
<section class="pt-4">
  <div class="container px-lg-5">
    <div class="row">
      <div class="col">
          <table class="table table-borderless">
            <thead>
            <tr class="bg-light">
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
            </thead>
            <tbody>
              <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item.id), class:"text-dark border-bottom border-dark" %></td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td>
                <% if item.is_active? == true %>
                <p class="text-success">販売中</p>
                <% else %>
                <p class="text-muted">販売停止中</p>
                <% end %>
              </td>
            </tr>
            <% end %>
            </tbody>
          </table>
          
      
      
      </div>
    </div>
    <ul class="pagination justify-content-center">
    <%= paginate @items %>
    </ul>
    </div>
  </div>
</section>



