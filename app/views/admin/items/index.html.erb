<header class="py-5">
  <div class="container px-lg-5">
    <div class="row">
      <div class="col">
        <h3 class="fs-4 fw-bold">商品一覧</h2>
      </div>
       <div class="pull-right">
          <%= link_to new_admin_item_path do %>
            <i class="far fa-plus-square"></i>
          <% end %>
        </div>
      </div>
  </div>
</header>
  
<section class="pt-4">
  <div class="container px-lg-5">
    <div class="row">
      <div class="col">
          <table class="table">
            <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
            </thead>
            <tbody>
              <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item.id) %></td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td>
                <% if item.is_active? == true %>
                <p class="text-success">販売中</p>
                <% else %>
                <p class="text-muted">販売停止中</p>
                <% end %>
              </td>
            </tr>
            <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</section>


