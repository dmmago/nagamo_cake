<header class="py-5">
  <div class="container px-lg-5">
    <div class="row">
      <div class="col">
      <h3 class="fs-4 fw-bold"><span class="bg-light">商品詳細</span></h3>
 　  　</div>
    </div>
  </div>
</header>

<section class="pt-4">
    <div class="container px-lg-5">
      <div class="row">
        <div class="col-4">
          <%= image_tag @item.get_image(300,200) %>
        </div>
        <div class="col-8">
        <table class="table table-sm table-borderless">
          <tbody>
            <tr>
                <td>商品名</td>
                <td><%= @item.name %></td>
                
            </tr>
            <tr>
              <td></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <td>税込価格<br>（税抜価格）</td>
              <td>
                <%= @item.with_tax_price %>
                (<%= @item.price %>) 円
              </td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td>
                <% if @item.is_active? == true %>
                <p class="text-success">販売中</p>
                <% else %>
                <p class="text-muted">販売停止中</p>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
