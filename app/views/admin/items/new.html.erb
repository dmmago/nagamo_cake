<header class="py-5">
  <div class="container px-lg-5">
    <div class="row">
      <div class="col">
      <h3 class="fs-4 fw-bold"><span class="bg-light">商品新規登録</span></h3>
      </div>
    </div>
  </div>
  </header>
  <section class="pt-4">
    <div class="container px-lg-5">
      <div class="row">
        <div class="col">
          <%= form_with model: @item, url: admin_items_path do |f| %>
          <table class="table table-sm table-borderless">
            <tbody>
              <tr>
                <th>商品画像</th>
                <td>
                  <div class="form-group">
                  <%= f.file_field :image, accept: "image/*" %>
                  </div>
                </td>
              </tr>
              
              <tr>
                <th>商品名</th>
                
                <td>
                  <div class="form-group">
                  <%= f.text_field :name, autofocus: true %>
                </div>
                </td>
              </tr>
  
              <tr>
                <th>商品説明</th>
                <td>
                  <div class="form-group">
                  <%= f.text_area :introduction, autofocus: true %>
                  </div>
                </td>
              </tr>
               <tr>
                <th>ジャンル</th>
                <td>
                  <div class="form-group">
                  <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "選択してください") %>
                  </div>
                </td>
              </tr>
            
              <tr>
                <th>税抜価格</th>
                
                <td>
                  <div class="form-group">
                  <%= f.text_field :price, autofocus: true %>円
                  </div>
                </td>
              </tr>
          
              <tr>
                <th>販売ステータス</th>
                <td>
                  <%= f.radio_button :is_active, true %>
                  <%= f.label :"販売中" %>
        
                  <%= f.radio_button :is_active, false %>
                  <%= f.label :"販売停止中" %>
                </td>
              </tr>
            
        
            <div class="actions">
              <tr>
                <th></th>
                <td>
                  <%= f.submit "新規登録", class: "btn btn-success" %>
                </td>
              </tr>
            </div>
          </tbody>
        </table>
        </div>
        <% end %>
       </div>
    </div>
  </div>
</section>